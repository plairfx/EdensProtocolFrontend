# syntax = docker/dockerfile:1.6
FROM ghcr.io/joshstevens19/rindexer-bundled:latest

WORKDIR /app

# Debug: Let's see what's actually in the build context
RUN echo "=== Build context root ==="
RUN ls -la .
RUN echo "=== Looking for any folders ==="
RUN find . -type d -maxdepth 3
RUN echo "=== Looking for dwindexer specifically ==="
RUN ls -la dwindexer/ || echo "dwindexer folder not found"
RUN echo "=== Looking for any Realindexer ==="
RUN find . -name "*ealindexer*" -type d 2>/dev/null || echo "No Realindexer found"

# We'll comment out the copy for now
# COPY dwindexer/Realindexer/ /app/